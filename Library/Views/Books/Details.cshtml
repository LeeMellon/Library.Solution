@{
  Layout = "_Layout";
}

@using Library.Models;

<h2>Book: @Model["book"].GetTitle()</h2>
<hr />

  <div class="well">
    <ul>
      @foreach (Author author in @Model["bookAuthors"])
      {
        <li>Author: @author.GetFirstName() @author.GetLastName()</li>
      }
      <li>Call Number: @Model["book"].GetCallNumber()</li>
      <li>Tag Number: @Model["book"].GetTagNumber()</li>
      <li>Checkout Date: @Model["book"].GetCheckoutDate()</li>
      <li>Due Date: @Model["book"].GetDueDate()</li>
      <li>Status: @Model["book"].GetStatus()</li>
    </ul>
  </div>

