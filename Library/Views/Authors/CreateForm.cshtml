@{
  Layout = "_Layout";
}

<h1>Add a new author</h1>

<form class="form-inline" action="/authors" method="post">
  <div class="form-group">
    <label for="new-first-name">Author first name:</label>
    <input id="new-first-name" name="new-first-name" type="text" required="true">
  </div>

  <div class="form-group">
    <label for="new-last-name">Author last name:</label>
    <input id="new-last-name" name="new-last-name" type="text" required="true">
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>
